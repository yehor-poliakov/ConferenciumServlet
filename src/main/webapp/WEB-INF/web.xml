<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Conferencium</display-name>

    <resource-ref>
        <description>mysql db connection</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>org.poliakov.conferencium.Servlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size><!--10 MB file size-->
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>


    <!--Filters-->

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.poliakov.conferencium.filter.EncodingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>org.poliakov.conferencium.filter.LocaleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Error pages-->

    <!--Bad request-->
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/error/error400.jsp</location>
    </error-page>

    <!--Unauthorized-->
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/error/error401.jsp</location>
    </error-page>

    <!--Forbidden-->
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error/error403.jsp</location>
    </error-page>

    <!--Missing resource-->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/error404.jsp</location>
    </error-page>

</web-app>